<!DOCTYPE html>
<html>
	<body>

  <script>
    
    let name = prompt('Как тебя зовут?')
    alert( `Здравствуй, ${name}!` );

    let age = prompt('Сколько тебе лет?');
    if ( age > 20 ) {
    	alert (`Какой старый, ${age} лет!`);
    }
    else {
    	alert (`Какой молодой, ${age} лет!`);
    }

  </script>

</body>
</html>
